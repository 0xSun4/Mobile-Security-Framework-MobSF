version: '3'
services:
  postgres:
    image: "postgres:latest"
    restart: always
    hostname: postgres
    volumes:
      - /tmp/postgresql:/var/lib/postgresql
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=password
      - POSTGRES_DB=mobsf
    ports:
     - "5432:5432"    
  mobsf:
    build:
      context: .
      dockerfile: Dockerfile
      args:
       - POSTGRES=True
       - POSTGRES_IP='192.168.101.35'
    depends_on:
      - postgres   
    volumes:
      - /MobSF_data:/root/.MobSF
    ports:
     - "8000:8000"
